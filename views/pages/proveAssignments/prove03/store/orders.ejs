<!DOCTYPE html>
<html>

<head>
    <% include ../partials/header.ejs %>
</head>

<body>
    <% include ../partials/nav.ejs %>

    <div class="jumbotron text-center">
        <div class="container">
            <h1><%= title %></h1>
        </div>
    </div>
    <div>
        <div>
            <p>Ordered Items:</p>
            <% if (items.length > 0) { %>
            <ul>
                <% (item of items) { %>
                <li>
                    <p><%= item.title %></p>
                </li>
                <% } %>
            </ul>
            <% } else { %>
            <p>No items to list</p>
            <% } %>
        </div>
    </div>
</body>

</html>