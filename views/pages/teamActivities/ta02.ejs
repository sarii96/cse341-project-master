<!DOCTYPE html>
<html>

<head>
  <% include ../includes/header.ejs %>
</head>

<body>
  <% include ../includes/nav.ejs %>
  <div class="jumbotron text-center">
    <div class="container">
      <h1><%= title %></h1>
      <p>This is the placeholder for Team Activity 02</p>
    </div>
  </div>
  <div class="container">
    <div>
      <form action="/team/ta02" method="POST">
        <label for="newUser">New Username:</label><br>
        <input type="text" name="newUser">
        <button type="submit">Add User</button>
      </form>
    </div>
    <div>
      <form action="/team/ta02/removeUser" method="POST">
        <label for="remUser">Remove:</label><br>
        <input type="text" name="remUser">
        <button type="submit">Remove User</button>
      </form>
    </div>
    <div>
      <h2>Users:</h2>
      <% for(user of users) { %>
      <p><%= user %></p>
      <% } %>
    </div>
  </div>
</body>

</html>